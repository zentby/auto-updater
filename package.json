{
    "name": "auto-updater",
    "displayName": "Extension Auto Updater",
    "publisher": "yangzhao",
    "description": "Expose an API to allow VSCode extension get updated with a private link",
    "repository": "https://github.com/zentby/auto-updater.git",
    "author": {
        "name": "Yang Zhao",
        "email": "yangzhao.nz@gmail.com"
    },
    "version": "1.3.0",
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "extensionDependencies": [
        "mindaro-dev.file-downloader"
    ],
    "contributes": {
        "configuration": {
            "title": "Auto Updater",
            "properties": {
                "auto-updater.check-frequency": {
                    "type": "number",
                    "title": "Check Frequency (days)",
                    "default": 7,
                    "description": "How often to check for updates (in days)"
                },
                "auto-updater.disabled": {
                    "type": "boolean",
                    "title": "Disabled",
                    "default": false,
                    "description": "Disable auto updater"
                }
            }
        }
    },
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "rm -rf dist && npm run esbuild-base -- --minify",
        "compile": "npm run esbuild-base -- --sourcemap",
        "watch": "npm run esbuild-base -- --sourcemap --watch",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts --fix",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
        "test": "tsc -p . && vscode-test"
    },
    "dependencies": {
        "@microsoft/vscode-file-downloader-api": "^1.0.1"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "esbuild": "^0.19.11",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^46.9.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^5.1.2",
        "eslint-plugin-tslint": "^3.1.0",
        "node-stream-zip": "^1.15.0",
        "prettier": "^3.1.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.2"
    },
    "packageManager": "yarn@4.0.2",
    "icon": "images/icon.png"
}
